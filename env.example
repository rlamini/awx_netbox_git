# ============================================
# NETBOX DOCKER ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and modify the values
# cp env.example .env

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_NAME=netbox
DB_USER=netbox
DB_PASSWORD=ChangeMe_SecurePasswordHere123!

# ============================================
# NETBOX VERSION
# ============================================
# Specify NetBox version (e.g., v3.6, v3.7, latest)
# See: https://hub.docker.com/r/netboxcommunity/netbox/tags
NETBOX_VERSION=latest

# ============================================
# NETBOX SECRET KEY
# ============================================
# CRITICAL: Generate a unique secret key (minimum 50 characters)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(50))"
# Or: openssl rand -base64 48
SECRET_KEY=changeme_please_use_50_random_characters_minimum_VERY_IMPORTANT

# ============================================
# SUPERUSER CONFIGURATION
# ============================================
# Admin user created on first run
SUPERUSER_NAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=admin
SUPERUSER_API_TOKEN=

# Set to true to skip superuser creation
SKIP_SUPERUSER=false

# ============================================
# NETWORK CONFIGURATION
# ============================================
# Port to expose NetBox on
NETBOX_PORT=8000

# Allowed hosts (comma-separated, * for all)
# Examples: localhost,netbox.example.com,192.168.1.100
ALLOWED_HOSTS=*

# Allow CORS from all origins
CORS_ORIGIN_ALLOW_ALL=True

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Configure if you want NetBox to send emails
EMAIL_SERVER=localhost
EMAIL_PORT=25
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_USE_SSL=False
EMAIL_USE_TLS=False
EMAIL_TIMEOUT=10
EMAIL_FROM=netbox@example.com

# ============================================
# APPLICATION SETTINGS
# ============================================
# Time zone (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TIME_ZONE=UTC

# Enable webhooks
WEBHOOKS_ENABLED=true

# Enable Prometheus metrics
METRICS_ENABLED=false

# Skip startup scripts
SKIP_STARTUP_SCRIPTS=false

# ============================================
# REDIS CONFIGURATION
# ============================================
# Usually no need to change these
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6379
REDIS_CACHE_DATABASE=0

# ============================================
# SECURITY NOTES
# ============================================
# 1. ALWAYS change SECRET_KEY before deploying to production
# 2. Use strong passwords for DB_PASSWORD and SUPERUSER_PASSWORD
# 3. In production, set ALLOWED_HOSTS to specific domains
# 4. Set CORS_ORIGIN_ALLOW_ALL=False in production and configure specific origins
# 5. Never commit the .env file to version control
# 6. Backup your SECRET_KEY securely - losing it means losing access to encrypted data

